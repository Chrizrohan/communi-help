<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingPage">

    <!-- Header background image -->
    <ImageView
        android:id="@+id/imagebox"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/box"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/setting_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="SETTING"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Back button -->
    <ImageButton
        android:id="@+id/backicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/backicon"
        android:background="@android:color/transparent"
        android:contentDescription="Back"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- ACCOUNT Option -->
    <TextView
        android:id="@+id/account"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="110dp"
        android:layout_marginHorizontal="30dp"
        android:gravity="center"
        android:text="ACCOUNT"
        android:textColor="#244065"
        android:textSize="22sp"
        android:shadowColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/box2"
        app:layout_constraintTop_toBottomOf="@id/imagebox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- HELP Option -->
    <TextView
        android:id="@+id/help"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="30dp"
        android:gravity="center"
        android:text="HELP"
        android:textColor="#244065"
        android:textSize="22sp"
        android:shadowColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/box2"
        app:layout_constraintTop_toBottomOf="@id/account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ABOUT Option -->
    <TextView
        android:id="@+id/about"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="30dp"
        android:gravity="center"
        android:text="ABOUT"
        android:textColor="#244065"
        android:textSize="22sp"
        android:shadowColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/box2"
        app:layout_constraintTop_toBottomOf="@id/help"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- EXIT Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/exitfromcommunity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/finalbutton"
        android:text="EXIT FROM COMMUNITY"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Profile Icon (next to ACCOUNT) -->
    <ImageView
        android:id="@+id/profile_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/profile"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toTopOf="@id/account"
        app:layout_constraintBottom_toBottomOf="@id/account"
        app:layout_constraintStart_toStartOf="@id/account" />

    <!-- Help Icon -->
    <ImageView
        android:id="@+id/help_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/helpicon"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toTopOf="@id/help"
        app:layout_constraintBottom_toBottomOf="@id/help"
        app:layout_constraintStart_toStartOf="@id/help" />

    <!-- About Icon -->
    <ImageView
        android:id="@+id/about_icon"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:src="@drawable/abouticon"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toTopOf="@id/about"
        app:layout_constraintBottom_toBottomOf="@id/about"
        app:layout_constraintStart_toStartOf="@id/about" />

</androidx.constraintlayout.widget.ConstraintLayout>
